<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    android:id="@+id/drawer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".customer.CustomerMainPage">

    <FrameLayout
        android:id="@+id/customer_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <android.support.design.widget.NavigationView
        android:id="@+id/customer_nav_view"
        android:layout_width="@dimen/navigation_drawer_width"
        android:layout_height="match_parent"
        app:menu="@menu/customer_drawer_menu"
        android:background="@drawable/blushed_alu_repeat"
        app:headerLayout="@layout/customer_nav_header"
        app:itemTextColor="#BB981D"
        app:itemIconTint="#AE8D0B"
        android:fitsSystemWindows="true"
        android:layout_gravity="start"/>

</android.support.v4.widget.DrawerLayout>